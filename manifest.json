{
  "manifest_version": 3,
  "name": "Releasit COD Detector",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://*.myshopify.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}
